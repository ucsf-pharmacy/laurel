{#
/**
 * @file
 * Theme override to display a two-column layout.
 *
 * Available variables:
 * - content: The content for this layout.
 * - attributes: HTML attributes for the layout <div>.
 */
#}

{# 2021.0310 frankfarm - whitespace has been removed around content.first and content.second so that elsewhere :empty can be set to display: none and these elements will be hidden. with the whitespace, :empty will not work.  #}
{% if content %}
  <div{{ attributes }}>

    {% if content.first %}
      <div {{ region_attributes.first.addClass('layout__region', 'layout__region--first') }}>{{ content.first }}</div>
    {% endif %}

    {% if content.second %}
      <div {{ region_attributes.second.addClass('layout__region', 'layout__region--second') }}>{{ content.second }}</div>
    {% endif %}

  </div>
{% endif %}
